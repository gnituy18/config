#!/bin/bash

CMD=$1
NAME=$2

case $CMD in
	add) 
		touch ~/notes/$NAME.md 
		;;
	rm) 
		name=$(ls ~/notes | fzf)
		if [ $name ] ; then 
			rm ~/notes/$name
		fi
		;;
	*)
		if [ -e ~/notes/$NAME.md ] ; then
			nvim ~/notes/$NAME.md
		else
			name=$(ls ~/notes | fzf)
			if [ $name ] ; then 
				nvim ~/notes/$name
			fi
		fi
		;;
esac
